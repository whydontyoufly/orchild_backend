<?xml version="1.0" encoding="UTF-8"?>

<ehcache>
    <!-- 磁盘缓存位置 -->
    <diskStore path="java.io.tmpdir/ehcache"/>
    <!-- 默认缓存 -->
    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="0"
            overflowToDisk="false"
    />
    <cache name="authorizationCache"
           eternal="false"
           maxElementsInMemory="10000"
           timeToIdleSeconds="120"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>


</ehcache>